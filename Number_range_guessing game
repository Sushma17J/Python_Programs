from flask import Flask, request, session, render_template_string, redirect, url_for
import random

app = Flask(__name__)
app.secret_key = 'supersecret'  # Needed for session

# HTML Template
template = """
<!doctype html>
<title>Custom Range Number Guessing Game</title>
<h2>Guess the Number!🎯</h2>

{% if not session.get('game_started') %}
  <form method="post">
    <label>Start of Range: <input type="number" name="start" required></label><br><br>
    <label>End of Range: <input type="number" name="end" required></label><br><br>
    <button type="submit" name="start_game" value="1">Start Game</button>
  </form>
{% else %}
  <form method="post">
    <label>Enter your guess: <input type="number" name="guess" required></label>
    <input type="submit" value="Submit Guess">
  </form>
  <p>{{ message }}</p>
  <form method="post">
    <button type="submit" name="reset" value="1">Reset Game</button>
  </form>
{% endif %}
"""

@app.route('/', methods=['GET', 'POST'])
def index():
    message = ""

    if request.method == 'POST':
        # Reset game
        if 'reset' in request.form:
            session.clear()
            return redirect(url_for('index'))

        # Start a new game with user-defined range
        if 'start_game' in request.form:
            start = int(request.form['start'])
            end = int(request.form['end'])
            if start >= end:
                message = "Start must be less than end!"
            else:
                session['number'] = random.randint(start, end)
                session['range'] = (start, end)
                session['attempts'] = 0
                session['game_started'] = True
                print(f"[DEBUG] Secret number: {session['number']}")
        # Handle guessing
        elif session.get('game_started'):
            guess = int(request.form['guess'])
            secret = session.get('number')
            session['attempts'] += 1

            if guess < secret:
                message = "Too low! Try again."
            elif guess > secret:
                message = "Too high! Try again."
            else:
                message = f"🎉 Correct! You guessed it in {session['attempts']} attempts."
                session.clear()

    return render_template_string(template, message=message)

if __name__ == '__main__':
    app.run(debug=True)
